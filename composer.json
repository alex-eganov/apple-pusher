{
    "name": "bibi4k0/apple-pusher",
    "type": "library",
    "license": "MIT",
    "description": "A simple library for creating and sending push-notifications to apple devices via APNs using HTTP/2.",
    "keywords": [
        "push",
        "apple",
        "apns",
        "notification",
        "http2"
    ],
    "authors": [
        {
            "name": "Alex Eganov",
            "email": "alex.eganov@gmail.com"
        }
    ],
    "scripts": {
        "unit": "vendor/bin/phpunit tests"
    },
    "require": {
        "php": ">=8.0",
        "ext-json": "*",
        "ext-curl": "*",
        "ramsey/uuid": "^3.9.3",
        "lcobucci/jwt": "^4.1",
        "lcobucci/clock": "2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "bIbI4k0\\ApplePusher\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "bIbI4k0\\ApplePusher\\Tests\\": "tests/"
        }
    }
}
